<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <proyect.travelassistant.carousels.CarouselLayout
        android:id="@+id/carouselLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/colorItemCarrousel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewiconCarrousel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/textViewCityCarrousel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MADRID"
                    style="@style/Style_Title_Carrousel_city"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/itemcarrousel_minWeather"
                    style="@style/Style_Title_Carrousel_item" />

                <TextView
                    android:id="@+id/textViewTminCarrousel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30 ºC"
                    android:textAlignment="textStart"
                    style="@style/Style_Title_Carrousel_item_mint"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/itemcarrousel_maxWeather"
                    style="@style/Style_Title_Carrousel_item" />

                <TextView
                    android:id="@+id/textViewTmaxCarrousel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="40 ºC"
                    android:textAlignment="textStart"
                    style="@style/Style_Title_Carrousel_item_maxt"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/itemcarrousel_humidity"
                    style="@style/Style_Title_Carrousel_item"/>

                <TextView
                    android:id="@+id/textViewHumCarrousel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="80%"
                    android:textAlignment="textStart"
                    style="@style/Style_Title_Carrousel_item_hum"/>
            </LinearLayout>


        </LinearLayout>
    </proyect.travelassistant.carousels.CarouselLayout>
</LinearLayout>